{
	"name": "IC GPA Calculator",
	"version": "1.0",
	"manifest_version":2,
	"description": "Calculates GPA on Infinite Campus",
	"icons":
	{
		"16":"16x16logo.png",
		"48":"48x48logo.png",
		"128":"128x128logo.png",
		"192":"192x192logo.png"
	},
	"content_scripts":
	[
		{
		"matches": ["<all_urls>"],
		"js": ["js/background.js"]
		}
	],
	"permissions":
	[
		"activeTab",
		"tabs",
		"<all_urls>"
	],
	"browser_action":
	{
		"default_icon": "192x192logo.png",
		"default_popup": "popup.html",
		"default_title": "A popup will be here."
	}
}